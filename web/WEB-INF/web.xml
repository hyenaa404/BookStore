<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <display-name>home</display-name>
    <servlet>
        <servlet-name>FictionListServlet</servlet-name>
        <servlet-class>controller.FictionListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NonfictionListServlet</servlet-name>
        <servlet-class>controller.NonfictionListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PoetryListServlet</servlet-name>
        <servlet-class>controller.PoetryListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminHomeServlet</servlet-name>
        <servlet-class>controller.admin.AdminHomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserManageServlet</servlet-name>
        <servlet-class>controller.admin.UserManageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllBookServlet</servlet-name>
        <url-pattern>/all-book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FictionListServlet</servlet-name>
        <url-pattern>/fiction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NonfictionListServlet</servlet-name>
        <url-pattern>/nonfiction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PoetryListServlet</servlet-name>
        <url-pattern>/poetry</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHomeServlet</servlet-name>
        <url-pattern>/admin-home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserManageServlet</servlet-name>
        <url-pattern>/user-manage</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>controller.filter.AccessFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DisplayButtonFilter</filter-name>
        <filter-class>controller.filter.DisplayButtonFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/account</url-pattern>
        <url-pattern>/cart</url-pattern>
        <url-pattern>/order</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DisplayButtonFilter</filter-name>
        <url-pattern>/all-book</url-pattern>
        <url-pattern>/fiction</url-pattern>
        <url-pattern>/nonfiction</url-pattern>
        <url-pattern>/poetry</url-pattern>
        <url-pattern>/account</url-pattern>
        <url-pattern>/cart</url-pattern>
        <url-pattern>/detail</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/order</url-pattern>
        <url-pattern>/register</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
        <init-param>
            <param-name>user</param-name>
            <param-value>ad</param-value>
        </init-param>
        <init-param>
            <param-name>pass</param-name>
            <param-value>1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoanServlet</servlet-name>
        <servlet-class>controller.LoanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllBookServlet</servlet-name>
        <servlet-class>controller.AllBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>controller.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
</web-app>
